    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch gettext.js",
            "program": "${workspaceFolder}/gettext.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "type": "node",
            "name": "Launch",
            "program": "${workspaceFolder}/src/index.ts",
            "request": "launch",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": ["${workspaceFolder}/out/**/*.js"]
        }
    ]
}
